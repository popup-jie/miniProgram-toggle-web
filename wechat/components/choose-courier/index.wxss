.btnView::after {
  animation: fade 0.3s forwards;
}

@keyframes fade {
  0% {
    left: 50%;
    width: 0;
    opacity: 0;
  }
  100% {
    opacity: 1;
    left: 0;
    width: 100%;
  }
}

:export {
  baseColor: #f5f5f5;
  modelBaseColor: white;
  dividerColor: #ededed;
  popUpBjColor: rgba(0, 0, 0, 0.4);
  title: title;
  ell: ell;
  ell_2: ell_2;
  subTitle: subTitle;
}

.popup-title {
  color: red;
}

.popup-wrapper {
  border-radius: 16rpx 16rpx 0 0 !important;
  z-index: 10;
}

.popup-wrapper .popup-title {
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
  margin-left: 40rpx;
}

.popup-wrapper .pickerActive {
  color: #47d1b6;
  font-size: 32rpx;
  font-weight: bold;
}

.popup-wrapper .van-picker__frame::after {
  border: 0;
}

.popup-wrapper .pickerNormal {
  font-size: 26rpx;
  color: #999;
}

.popup-wrapper .saveBtn {
  width: 670rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(90deg, #37bec1, #51ddad);
  border-radius: 40rpx;
  color: #fff;
  font-size: 32rpx;
  margin: 30rpx auto;
  border: 0;
  display: block;
}
